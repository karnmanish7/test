@model IEnumerable<TaskRobo.Models.UserTask>
@{
    ViewBag.Title = "Index";
}

<h2>Tasks</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskStatus)
                </td>

                <td>
                    @Html.ActionLink("Delete", "DeleteCategory", "Categories", routeValues: null, htmlAttributes: new { id = "@item.CategoryID" })
                    <a asp-action="Edit" asp-route-id="@item.TaskId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TaskId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col col-md-6">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.TaskTitle)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.TaskContent)</h6>
                        <p class="card-text"> @Html.DisplayFor(modelItem => item.TaskStatus)</p>
                        <a href="#" class="card-link">Edit</a>
                        <a href="#" class="card-link">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

